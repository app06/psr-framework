{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1.0",
    "ext-PDO": "^7.1",
    "ext-json": "*",
    "ext-mbstring": "*",
    "aura/router": "^3.1",
    "monolog/monolog": "^2.0",
    "psr/container": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "symfony/console": "4.1",
    "twig/twig": "^3.0",
    "zendframework/zend-config-aggregator": "^1.1",
    "zendframework/zend-diactoros": "^2.1",
    "zendframework/zend-httphandlerrunner": "^1.1",
    "zendframework/zend-servicemanager": "^3.4",
    "zendframework/zend-stratigility": "^3.2"
  },
  "require-dev": {
    "filp/whoops": "^2.5",
    "phpunit/phpunit": "^8.4",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App/",
      "Framework\\": "src/Framework/",
      "Infrastructure\\": "src/Infrastructure/",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S localhost:8080 -t public",
    "check": [
      "@cs-check",
      "@test"
    ],
    "test": "phpunit --colors=always",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "app": "php bin/app.php --ansi",
    "development-enable": "ln -sr config/autoload/development.local.php.dist config/autoload/development.local.php",
    "development-disable": "rm config/autoload/development.local.php"
  }
}
